<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Login</h1>
                    <p class="text-center lead">Faça login ou crie sua conta</p>
                    <%- include('includes/messages') %> 
                    <div class="row">
                        <div class="col-lg my-3">
                            <h4>Faça seu cadastro</h4>
                            <p>Se voçê não tem uma conta, preencha o formulario abaixo</p>
                            <form action="/login/register" method="post">
                              <input type="hidden" name="_csrf" value=<%- csrfToken %>>
                                <div class="form-group">
                                  <label >Seu Email</label>
                                  <input name="email" type="email" class="form-control" placeholder="Insira seu e-mail aqui">
                                </div>
                                <div class="form-group">
                                  <label>Password</label>
                                  <input name="password" type="password" class="form-control" " placeholder="Senha">
                                </div>
                                <button type="submit" class="btn btn-primary">Criar  conta</button>
                              </form>
                        </div>  
                        <div class="col-lg my-3">
                            <h4>Fazer Login</h4>
                            <p>Insira seu email e senha para fazer login no site</p>
                            <form action="/login/" method="post">
                               <input type="hidden" name="_csrf" value=<%- csrfToken %>>
                                <div class="form-group">
                                  <label >Seu Email</label>  
                                  <input name="email" type="email" class="form-control" placeholder="Insira seu e-mail aqui">
                                </div>
                                <div class="form-group">
                                  <label>Password</label>
                                  <input name="password" type="password" class="form-control" " placeholder="Senha">
                                </div>
                                <button type="submit" class="btn btn-primary">Fazer Login</button>
                              </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>

        <%- include('includes/footer') %>